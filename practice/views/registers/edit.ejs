<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body class="body">
    <% include ../partials/nav %>
    <div id="body_content_id">
      <% include ./partials/header %>

      <form action="/registers/<%= register._id %>?_method=put" method="post">
        
        <div>
          
          <h3>Edit Post</h3>
          
          <fieldset>
            <div>
              <label for="title">제목</label>
              <div >
                <input type="text" id="title" name="title" value="<%= register.title %>">
                <% if(errors.title){ %>
                  <span ><%= errors.title.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="sub_title">부제목</label>
              <div >
                <input type="text" id="sub_title" name="sub_title" value="<%= register.sub_title %>">
                <% if(errors.sub_title){ %>
                  <span ><%= errors.sub_title.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="company">회사명</label>
              <div >
                <input type="text" id="company" name="company" value="<%= register.company %>">
                <% if(errors.company){ %>
                  <span ><%= errors.company.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="required_people">필요 크리에이터 수</label>
              <div >
                <input type="text" id="required_people" name="required_people" value="<%= register.required_people %>">
                <% if(errors.required_people){ %>
                  <span ><%= errors.required_people.message %></span>
                <% } %>
              </div>
            </div>
            
            <div>
              <label for="budget">예산</label>
              <div >
                <input type="text" id="budget" name="budget" value="<%= register.budget %>">
                <% if(errors.budget){ %>
                  <span ><%= errors.budget.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="deadline">마감일</label>
              <div>
                <input type="date" id="deadline" name="deadline" value="<%= register.deadline %>">
                <% if(errors.deadline){ %>
                  <span ><%= errors.deadline.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="body">내용</label>
              <div>
                <textarea id="body" name="body" rows="5"><%= register.body %></textarea>
                <% if(errors.body){ %>
                  <span><%= errors.body.message %></span>
                <% } %>
              </div>
            </div>

          </fieldset>

        </div>

        <div class="buttons">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>

        <% if(errors.unhandled){ %>
          <div class="alert alert-danger">
            <%= errors.unhandled %>
          </div>
        <% } %>
        
      </form>

    </div>  <!-- container end -->
  </body>
</html>
