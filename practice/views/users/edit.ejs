<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body class="body">
    <% include ../partials/nav %>

    <div id="body_content_id">

      <div>
        <a href="/users/<%= username %>">Back</a>
      </div>

      <form action="/users/<%= username %>?_method=put" method="post">
        <div>
          <h3>회원정보 수정</h3>
          <fieldset>
            
            <div>
              <label for="currentPassword" >현재 비밀번호*</label>
              <div>
                <input type="password" id="currentPassword" name="currentPassword" value="">
                <% if(errors.currentPassword){ %>
                  <span ><%= errors.currentPassword.message %></span>
                <% } %>
              </div>
            </div>

            <hr></hr>
            
            <div>
              <label for="username" >ID*</label>
              <div>
                <input type="text" id="username" name="username" value="<%= user.username %>">
                <% if(errors.username){ %>
                  <span><%= errors.username.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="name" >이름*</label>
              <div>
                <input type="text" id="name" name="name" value="<%= user.name %>">
                <% if(errors.name){ %>
                  <span><%= errors.name.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="email" >Email</label>
              <div>
                <input type="text" id="email" name="email" value="<%= user.email %>">
                <% if(errors.email){ %>
                  <span><%= errors.email.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="phone_num" >휴대전화</label>
              <div>
                <input type="text" id="phone_num" name="phone_num" value="<%= user.phone_num %>">
                <% if(errors.phone_num){ %>
                  <span><%= errors.phone_num.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="newPassword" >새 비밀번호</label>
              <div>
                <input type="password" id="newPassword" name="newPassword" value="">
                <% if(errors.newPassword){ %>
                  <span><%= errors.newPassword.message %></span>
                <% } %>
              </div>
            </div>

            <div>
              <label for="passwordConfirmation" >비밀번호 확인</label>
              <div>
                <input type="password" id="passwordConfirmation" name="passwordConfirmation" value="">
                <% if(errors.passwordConfirmation){ %>
                  <span><%= errors.passwordConfirmation.message %></span>
                <% } %>
              </div>
            </div>

            <p>
              <small>*는 필수 입력 사항 입니다.</small>
            </p>

          </fieldset>
        </div>

        <div>
          <button type="submit" class="btn btn-default">제출</button>
        </div>

        <% if(errors.unhandled){ %>
          <div class="alert alert-danger">
            <%= errors.unhandled %>
          </div>
        <% } %>
      </form>

    </div> <!-- container end -->
  </body>
</html>
